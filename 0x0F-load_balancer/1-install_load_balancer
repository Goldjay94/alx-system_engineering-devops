#!/usr/bin/env bash
#Install, update package list and configure HAProxy

sudo apt update
sudo apt install haproxy -y
haproxy=/etc/default/haproxy
echo "ENABLED=1" | sudo tee -a $haproxy

path=/etc/haproxy/haproxy.cfg
config=\
"
frontend goldjay-frontend
	  bind *:80
	  default_backend goldjay-backend
backend goldjay-backend
	balance static-rr
	server web-01 54.88.199.223:80 check
	server web-02 54.208.92.253:80 check
"

echo "$config" | sudo tee -a "$path"
sudo systemctl restart haproxy.service
